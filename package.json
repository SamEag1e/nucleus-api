{
  "name": "nucleus-api",
  "version": "1.0.0",
  "description": "A modular Express 5 + TypeScript boilerplate for building production-ready APIs fast.",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "db:bson": "node -r tsconfig-paths/register dist/database/json-schemas.js",
    "predev": "docker compose -f docker-compose.dev.yaml up -d",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn -r tsconfig-paths/register src/main.ts",
    "postdev": "docker compose -f docker-compose.dev.yaml down --remove-orphans",
    "pretest": "docker compose -f docker-compose.test.yaml up -d",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:cov": "npm test -- --coverage",
    "posttest": "docker compose -f docker-compose.test.yaml down -v --remove-orphans",
    "test:watch": "cross-env NODE_ENV=test npm run pretest && jest --watch --runInBand",
    "build": "tsc -p tsconfig.prod.json && tsc-alias",
    "start": "cross-env NODE_ENV=production && node dist/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SamEag1e/nucleus-api.git"
  },
  "keywords": [],
  "author": "Samad Taghinezhad",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SamEag1e/nucleus-api/issues"
  },
  "homepage": "https://github.com/SamEag1e/nucleus-api#readme",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "axios": "^1.13.2",
    "config": "^4.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "mongoose": "^8.19.3",
    "morgan": "^1.10.1",
    "redlock": "^5.0.0-beta.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^30.0.0",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
